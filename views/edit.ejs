<%- include('./partials/header.ejs') %>
    <div class="container">
        <div class="row mt-5">
            <div class="col-sm-6">
                <h2 class="alert alert-success text-center">Edit Student</h2>
                <div class="form">
                    <form method="post" action="/update/<%= data._id %>">
                          <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Name</label>
                            <input type="text" id="disabledTextInput" name="name" class="form-control" placeholder="Enter Name" value="<%= data.name%>">
                          </div>
                          <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Age</label>
                            <input type="number" id="disabledTextInput" name="age" class="form-control" placeholder="Enter Age" value="<%= data.age%>">
                          </div>
                          <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Fees</label>
                            <input type="number" id="disabledTextInput" name="fees" class="form-control" placeholder="Enter Fees" value="<%= data.fees%>">
                          </div>
                          
                          <button type="submit" class="btn btn-success">Update</button>

      
                        
                      </form>
                </div>
            </div>
            
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>