<%- include('./partials/header.ejs') %>
    <div class="container">
        <div class="row mt-5">
            <div class="col-sm-6">
                <h2 class="alert alert-success text-center">Add New Student</h2>
                <div class="form">
                    <form method="post">
                          <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Name</label>
                            <input type="text" id="disabledTextInput" name="name" class="form-control" placeholder="Enter Name">
                          </div>
                          <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Age</label>
                            <input type="number" id="disabledTextInput" name="age" class="form-control" placeholder="Enter Age">
                          </div>
                          <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Fees</label>
                            <input type="number" id="disabledTextInput" name="fees" class="form-control" placeholder="Enter Fees">
                          </div>
                          
                          <button type="submit" class="btn btn-primary">Submit</button>
                        
                      </form>
                </div>
            </div>
            <div class="col-sm-6">
                <h2 class="alert alert-danger text-center">List Of Student</h2>
                <div class="table">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Fees</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% var i= 1 %>
                            <% data.forEach((item)=>{
                                %>
                                <tr>
                                    <th scope="row"><%=i++ %></th>
                                    <td><%=item.name %></td>
                                    <td><%=item.age %></td>
                                    <td><%=item.fees %></td>
                                    <td >
                                      <form action="/edit/<%= item._id%>" class="d-inline-flex">
                                        <button type="submit" class="btn btn-success">Edit</button>
                                      </form>
                                      <form action="/delete/<%= item._id%>" class="d-inline-flex">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                      </form>
                                
                                    </td>
                                  </tr>
                                <%
                            })%>
                          
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
